# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration
# For Production (PostgreSQL on Render): Use DATABASE_URL
DATABASE_URL=postgresql://user:password@host:5432/database
DB_TYPE=postgresql

# For Development (MySQL): Use individual DB configs
# DB_TYPE=mysql
# DB_HOST=localhost
# DB_USER=root
# DB_PASSWORD=your_password
# DB_NAME=eshoe
# DB_PORT=3306

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRE=7d
ADMIN_JWT_SECRET=your-admin-jwt-secret-different-from-user-jwt-min-32-chars
ADMIN_JWT_EXPIRE=7d

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# OTP Configuration (For production, use actual SMS service)
OTP_EXPIRE_MINUTES=5

# Twilio Configuration (Optional - for SMS OTP)
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_PHONE_NUMBER=your_twilio_phone

# CORS Configuration
# For Production: Use your actual frontend URLs (comma-separated)
CORS_ORIGIN=https://your-frontend.vercel.app,https://your-admin.vercel.app
# For Development: http://localhost:5173,http://localhost:5174

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend URLs (for redirects, etc.)
FRONTEND_URL=https://your-frontend.vercel.app
ADMIN_URL=https://your-admin.vercel.app
